<!-- CSS FILE -->
<link rel="stylesheet" type="text/css" href="/public/css/style.css" />

<%- include('../layout/header'); -%>
<br>
<br>

<div class="image-container">
<div class="image-child">
<h4><%=image.title%></h4>
<%=image.author%>, <i><%=image.date%></i>
<br>
<br>
<%=image.description%>
<br>
<br>
<img src=<%=imgpath%> width="700" height="600">
<br>
<br>
<!-- SUBMIT CAPTION / COMMENT FORM -->
<form action="/image/<%=id%>" method="post">    
    <input type="text" name="comment">
    <br>
    <button type="submit" class="comment-button">Submit Comment</button>
</form>
<br>
<br>
Comments:
<br>
<% captions.forEach(function(caption){ %>
    <% users.forEach(function(user){ %>
        <%if (caption.user_id === user.id) { %>
            <br>
            <b><%=user.name%> - <%=user.email%></b>:
            <%=caption.caption_text%>
            <br> 
        <% } %>
    <% }); %>
<% }); %>
</div>
</div>